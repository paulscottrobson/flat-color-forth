// ==================================================================================================================

@xmacro ++
		inc 	hl

// ==================================================================================================================

@xmacro +++
		inc 	hl
		inc 	hl
		
// ==================================================================================================================

@xmacro --
		dec 	hl
		
// ==================================================================================================================

@xmacro ---
		dec 	hl
		dec 	hl
		
// ==================================================================================================================

@xmacro -
		ld 		a,h
		cpl
		ld 		h,a
		ld 		a,l
		cpl
		ld 		l,a
	
// ==================================================================================================================

@xmacro 2*
		add 	hl,hl

// ==================================================================================================================

@xmacro 2/
		sra 	h
		rr 		l

// ==================================================================================================================

@word abs
		bit 	7,h
		jp 		nz,__Negate
		
// ==================================================================================================================

@xmacro bswap
		ld 		a,h
		ld 		h,l
		ld 		l,a

// ==================================================================================================================

@word negate

__Negate:
		ld 		a,h
		cpl
		ld 		h,a
		ld 		a,l
		cpl
		ld 		l,a
		inc 	hl

			